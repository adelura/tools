[alias]
	st = status
	co = checkout
	purr = pull --rebase
	fa = fetch --all
	hash = log -1 --format="%h"
	ri = rebase -i
	cam = commit --amend
	cad = commit --add
	camd = commit --add --amend
	
	master = !sh -c 'git co master && git fetch origin master && git purr origin master'
	
[core]
	editor = 'C:/Program Files (x86)/Notepad++/notepad++.exe' -multiInst -notabbar -nosession -noPlugin
	excludesfile = C:/Users/adelura/.gitignore_global
